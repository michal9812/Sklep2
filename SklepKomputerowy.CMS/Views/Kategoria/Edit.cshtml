@model SklepKomputerowy.Data.Data.Sklep.Kategoria
@{
    ViewData["Title"] = "Edycja Kategorii-";
}
<div class="row  ">
    <h6 class="card-panel teal brown darken-4 white-text  header-backend-section-title">Edycja: @Model.Nazwa</h6>
</div>
<div class="row">
    <form asp-action="Edit" class="col s12">
        <partial name="Przyciski/_PrzyciskiZapiszPowrot" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdKategorii" />
        <div class="input-field col s12">
            <label asp-for="Nazwa" ></label>
            <input asp-for="Nazwa"  />
            <span asp-validation-for="Nazwa" class="text-danger"></span>
        </div>
        <div class="input-field col s12">
            <label asp-for="Opis" ></label>
            <input asp-for="Opis"  />
            <span asp-validation-for="Opis" class="text-danger"></span>
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
